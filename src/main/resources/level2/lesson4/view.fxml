<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<AnchorPane fx:id="AnchorPane" prefHeight="320.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/16 "
            stylesheets="@style.css"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="level2.lesson4.Controller">

    <Button fx:id="btn" mnemonicParsing="false" onAction="#sendMessage" prefWidth="100.0" text="Отправить"
            AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0"/>

    <TextField fx:id="textField" onAction="#sendMessage" promptText="Введите ваше сообщение"
               AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="130.0"/>

    <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="60.0"
              AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0" editable="false"/>
</AnchorPane>